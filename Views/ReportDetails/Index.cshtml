@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Index";
}



    <h5>Report Details Data Pekerja</h5>
    <p>
        Berikut status pekerja di PT Kilang Pertamina Internasional
    </p>
    <div class="d-flex justify-content-between align-items-center mb-2">
        <div>
            <!-- Tambahkan tombol atau elemen lain jika diperlukan -->
        </div>
        <form asp-action="SearchByNopek" method="get">
            <div class="input-group">
                <input type="text" class="form-control" name="searchTerm" placeholder="Search for Nopek" aria-label="Search for Nopek" aria-describedby="searchButton">
                <button type="submit" class="btn btn-primary" id="searchButton">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </form>
    </div>



<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>Nopek</th>
            <th>Nama</th>
            <th>Posisi</th>
            <th>Status</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nopek</td>
                <td>@item.Nama</td>
                <td>@item.Posisi</td>
                <td>@item.JenisKaryawan</td>
            </tr>
        }
    </tbody>
</table>
