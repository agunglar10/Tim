@model IEnumerable<PekerjaLisensi.Models.DataPekerja>

@{
    ViewData["Title"] = "Index";
}

<h5>Data Pekerja</h5>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nama)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nopek)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Posisi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusKaryawan)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nama)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nopek)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Posisi)
            </td>

                <td>
                    @Html.DisplayFor(modelItem => item.StatusKaryawan)
                </td>
                <td>
                    <a asp-action="TambahLisensi" asp-route-id="@item.Id" class="btn btn-primary">Tambah Lisensi</a>
                    
                </td>
        </tr>
}
    </tbody>
</table>
