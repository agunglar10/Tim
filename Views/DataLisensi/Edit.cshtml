@model PekerjaLisensi.Models.Lisensi

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="mb-4 text-center">Edit Data Lisensi</h4>
                    <hr />

                    <form asp-action="Edit" class="mb-4">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label for="NamaLisensi" class="form-label">Nama Lisensi</label>
                            <input asp-for="NamaLisensi" class="form-control" />
                            <span asp-validation-for="NamaLisensi" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="JenisLisensi" class="form-label">Jenis Lisensi</label>
                            <input asp-for="JenisLisensi" class="form-control" />
                            <span asp-validation-for="JenisLisensi" class="text-danger"></span>
                        </div>

                        <div class="text-left">
                            <button type="submit" class="btn btn-primary d-inline-block">Update</button>
                            <a asp-action="Index" class="btn btn-secondary d-inline-block ml-2">Kembali</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
