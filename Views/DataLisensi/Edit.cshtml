@model PekerjaLisensi.Models.Lisensi

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h4 class="mb-4 text-center">Edit Data Lisensi</h4>
            <hr />

            <form asp-action="Edit" class="mb-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label for="NamaLisensi" class="form-label">Jenis Lisensi</label>
                    <input asp-for="NamaLisensi" class="form-control" />
                    <span asp-validation-for="NamaLisensi" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label for="JenisLisensi" class="form-label">Jenis Lisensi</label>
                    <input asp-for="JenisLisensi" class="form-control" />
                    <span asp-validation-for="JenisLisensi" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Update</button>
                    <a asp-action="Index" class="btn btn-secondary">Kembali</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
